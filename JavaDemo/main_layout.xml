<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <TextView android:id="@+id/main__name"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main"/> 

	<Button
	    android:id="@+id/main_button_1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Button URL" />

	<Button
	    android:id="@+id/main_button_2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Button Dial" />
	<Button
	    android:id="@+id/main_button_3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Button Next" />
	<TextView android:id="@+id/main_result"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="等待" /> 
	
</LinearLayout>
